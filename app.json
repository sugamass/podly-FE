{
  "expo": {
    "name": "Podly",
    "slug": "podly",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.podly.mobile"
    },
    "android": {
      "package": "com.podly.mobile"
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router"
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
